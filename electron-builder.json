{
  "appId": "com.example.chathub",
  "productName": "ChatHub",
  "directories": {
    "output": "dist"
  },
  "files": [
    "src/**/*",
    "package.json"
  ],
  "asar": true,
  "compression": "maximum",
  "win": {
    "target": "nsis",
    "extraFiles": [],
    "requestedExecutionLevel": "asInvoker"
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": true
  },
  "mac": {
    "category": "public.app-category.utilities"
  },
  "linux": {
    "target": "AppImage"
  },
  "extraResources": [
    {
      "from": "src/",
      "to": "src/",
      "filter": ["**/*"]
    }
  ],
  "asarUnpack": [
    "node_modules/**/*"
  ],
  "removePackageScripts": true,
  "npmRebuild": false,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false
}